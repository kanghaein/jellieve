<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="@dimen/app_margin"
    android:layout_marginBottom="250dp"
    tools:context=".ui.HomeFragment">

    <TextView
        android:id="@+id/home_text_trust"
        style="@style/Home.TextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/home_title_margin"
        android:gravity="center"
        android:text="@string/app_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="@dimen/home_title_margin"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_id"
            style="@style/Login.TextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/bg_rectangle"
            android:textSize="15dp"
            android:text="아이디 입력"/>

        <EditText
            android:id="@+id/et_pw"
            style="@style/Login.TextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_rectangle"
            android:textSize="15sp"
            android:text="비밀번호 입력"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="10sp"
                android:text="로그인 상태 유지"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log in"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:paddingHorizontal="@dimen/login_padding">

            <TextView
                android:id="@+id/tv_find_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="아이디 찾기"/>
            <TextView
                android:id="@+id/tv_find_pw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="비밀번호 찾기"/>
            <TextView
                android:id="@+id/tv_join"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="회원가입"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>